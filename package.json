{
  "name": "scottmccracken.net",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "check": "astro check && biome check",
    "check:fix": "biome check --write",
    "dev": "astro dev",
    "html-validate": "pnpm build && pnpm exec html-validate dist/*.html",
    "prepare": "git config core.hooksPath .git-hooks && chmod +x .git-hooks/*",
    "preview": "astro preview",
    "stylelint": "stylelint \"src/**/*.{css,astro}\"",
    "stylelint:fix": "stylelint \"src/**/*.{css,astro}\" --fix"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/ts-plugin": "^1.10.6",
    "astro": "^5.17.3",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "rollup": "^4.59.0"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "cssnano": "^7.1.2",
    "html-validate": "^10.9.0",
    "stylelint": "^17.4.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^40.0.0"
  }
}
